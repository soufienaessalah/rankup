{% extends 'back/base.html.twig' %}

{% block title %}MatchEntity index{% endblock %}

{% block body %}
    <h1>MatchEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for match_entity in match_entities %}
            <tr>
                <td>{{ match_entity.id }}</td>
                <td>{{ match_entity.dateDebut ? match_entity.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_match_entity_show', {'id': match_entity.id}) }}">show</a>
                    <a href="{{ path('app_match_entity_edit', {'id': match_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_match_entity_new') }}">Create new</a>
{% endblock %}
