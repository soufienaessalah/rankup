{# pdf_template.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscription Plan Details PDF</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
   <div style="max-width: 600px; margin: 20 auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px;">
    <h1 class="title" style="text-align: center;">Subscription Plan Details</h1>

    <table class="table" style="margin: 0 auto;">
        <tbody>
            <tr>
                <th style="text-align: left;">Event Name</th>
                <td>{{ evenement.NomEvent }}</td>
            </tr>
            <tr>
                <th style="text-align: left;">Starting Dat</th>
                <td>{{ evenement.DateDebut }}</td>
            </tr>
            <tr>
                <th style="text-align: left;">Prix</th>
                <td>{{ evenement.DateFin }}</td>
            </tr>
            
        </tbody>
    </table>
</div>
</body>
</html>