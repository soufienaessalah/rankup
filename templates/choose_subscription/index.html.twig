        }

</style>

    

<h1 class="title">Choose Subscription Plan</h1>

<div class="search-container">
        <label for="search-input" class="sr-only">Search Plans</label>
        <input id="search-input" class="form-control" type="text" placeholder="Search Events..." style="width: 30%; padding: 10px; margin:13px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">
    </div>



<div class="plans-container">
    {% for plan in subscriptionPlans %}
        <div class="subscription-plan">
            <h2>{{ plan.getType() }}</h2>
            <p><strong>Price:</strong> ${{ plan.getPrix() }}</p>
            <p>{{ plan.getAdditionalInfo() }}</p>
            <a href="{{ path('app_choose_subscription_details', {'id': plan.getId()}) }}" class="btn btn-purple">Select Plan</a>
        </div>
    {% endfor %}
</div>
       



