<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Ensure jQuery is included before this script -->

<script>
    $(document).ready(function() {
        $("#search-input").on("input", function() {
            var value = $(this).val().toLowerCase();
            $(".subscription-plan").each(function() {
                var planType = $(this).find("h2").text().toLowerCase();
                if (planType.includes(value)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>