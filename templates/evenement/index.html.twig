{% block body %}
    {# {{ include('header.html.twig') }} #}
    <div class="search-container">
        <label for="search-input" class="sr-only">Search Events</label>
        <input id="search-input" class="form-control" type="text" placeholder="Search Events..." style="width: 30%; padding: 10px; margin:13px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">
    </div>

    <title>AJAX Search Example</title>
      
    
    <div class="container">
        <h1>Our Events</h1>
        {% if evenements is not empty %}
            <div class="events-list">
                {% for evenement in evenements %}
                    <div class="event">
                        <h2>{{ evenement.nomEvent }}</h2>
                        {#<p><strong>ID:</strong> {{ evenement.id }}</p>#}
                        <p><strong>Date:</strong> {{ evenement.dateDebut|date('Y-m-d') }} - {{ evenement.dateFin|date('Y-m-d') }}</p>
                        <p><strong>Type:</strong> {{ evenement.type }}</p>
                        {#<p><strong>Description:</strong> {{ evenement.description }}</p>#}

                        {% if evenement.image %}
                            <img src="{{ evenement.image }}" alt="{{ evenement.nomEvent }}">
                        {% else %}
                            <p>No image available</p>
                        {% endif %}

                        <p class="actions">
                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="show-button">Show Event</a>
                            {# <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Edit</a> #}
                        </p>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No records found</p>
        {% endif %}
    </div>
    <a href="{{ path('indewmain') }}" class="btn btn-info">calendar</a>

     {#<a href="{{ path('app_evenement_new') }}">Create new</a>#}
