<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">Subscription Plan Form</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="form-group">
                            {{ form_label(form.Type, 'Type') }}
                            {{ form_widget(form.Type, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.Prix, 'Price') }}
                            {{ form_widget(form.Prix, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">   
                            {{ form_label(form.additionalInfo, 'Additional Info') }}
                            {{ form_widget(form.additionalInfo, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                            {{ form_errors(form.additionalInfo) }}
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">{{ button_label|default('Save') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

