{# templates/reclamation/my_reclamation.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ma Réclamation{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Ma Réclamation</h2>
        <div class="card">
            <div class="card-body">
                <b class="text-muted">Type:</b>
                <p>{{ reclamation.type }}</p>
                <b class="text-muted">Description:</b>
                <p>{{ reclamation.description }}</p>
                <b class="text-muted">Date :</b>
                <p>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</p>

                 {% if reclamation.suiviReclamations is not empty %}
                <b class="text-muted">Suivi de Réclamation:</b>
                <ul>
                    {% for suiviReclamation in reclamation.suiviReclamations %}
                        <li>{{ suiviReclamation.status }}</li>
                        {# Ajoutez d'autres détails du suivi de réclamation si nécessaire #}
                    {% endfor %}
                </ul>
            {% else %}
                <p>votre reclamation est bien reçue.</p>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
